import { Observable } from 'rxjs';
import { AvlNotification, AvlNotificationConnectionOptions, AvlNotificationMetadata } from '@avl-controls/interfaces';
export declare class NotificationService {
    private hubConnections;
    private notification;
    /**
     * Observable which emits newly arrived notifications.
     */
    notification$: Observable<AvlNotification>;
    /**
     * Builds and starts signalR hub connection with the server.
     * If connection already exists and is not connected, restarts the connection.
     * @param endpoint server endpoint
     * @param options options of the connection
     */
    startConnection(endpoint: string, options: AvlNotificationConnectionOptions): void;
    /**
     * Stops connection with the server
     * @param connectionID connection identifier
     */
    stopConnection(connectionID: string): void;
    /**
     * Removes connection entirely
     * @param connectionID connection identifier
     */
    removeConnection(connectionID: string): void;
    /**
     * Updates notifications metadata for specific connection. Notifies server about it.
     * @param connectionID connection identifier
     * @param metadata notification metadata, (e.g language)
     */
    updateNotifications(connectionID: string, metadata: AvlNotificationMetadata): void;
    private startNotifications;
    private getConnectionByID;
    private buildConnection;
}
