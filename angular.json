{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "cli": {
    "analytics": false
  },
  "projects": {
    "vizbox-client": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist",
            "index": "src/index.html",
            "main": "src/main.ts",
            "tsConfig": "src/tsconfig.app.json",
            "polyfills": "src/polyfills.ts",
            "assets": [
              {
                "glob": "**/*",
                "input": "node_modules/@avl-ng-controls/navigation/assets",
                "output": "/assets"
              },
              {
                "glob": "**/*",
                "input": "node_modules/@avl-controls/datatable/dist/avl-datatable/assets",
                "output": "/assets"
              },              
              {
                "glob": "**/*.js",
                "input": "node_modules/@avl-vizbox-develop/browser-support/dist/ie11-warning",
                "output": "/"
              },
              {
                "glob": "**/*",
                "input": "node_modules/@avl-ng-controls/dialog/src/assets",
                "output": "assets"
              },
              "src/assets",
              "src/favicon.ico"
            ],
            "styles": [
              "src/styles.css"
            ],
            "scripts": [
              "node_modules/@webcomponents/webcomponentsjs/webcomponents-bundle.js",
              "node_modules/web-animations-js/web-animations-next.min.js" 
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "vizbox-client:build",
            "port": 4200
          },
          "configurations": {
            "production": {
              "browserTarget": "vizbox-client:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "vizbox-client:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "karmaConfig": "./karma.conf.js",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.spec.json",
            "scripts": [
              "node_modules/@webcomponents/webcomponentsjs/webcomponents-bundle.js",
              "node_modules/web-animations-js/web-animations-next.min.js"
            ],
            "styles": [
              "src/styles.css"
            ],
            "assets": [
              {
                "glob": "**/*",
                "input": "node_modules/@avl-ng-controls/navigation/assets",
                "output": "/assets"
              },
              {
                "glob": "**/*",
                "input": "node_modules/@avl-controls/datatable/dist/avl-datatable/assets",
                "output": "/assets"
              },              
              {
                "glob": "**/*.js",
                "input": "node_modules/@avl-vizbox-develop/browser-support/dist/ie11-warning",
                "output": "/"
              },
              "src/assets",
              "src/favicon.ico"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "src/tsconfig.app.json",
              "src/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "vizbox-client-e2e": {
      "root": "e2e",
      "sourceRoot": "e2e",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "./protractor.conf.js",
            "devServerTarget": "vizbox-client:serve"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "e2e/tsconfig.e2e.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "vizbox-client",
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "viz",
      "style": "css"
    },
    "@schematics/angular:directive": {
      "prefix": "viz"
    }
  }
}